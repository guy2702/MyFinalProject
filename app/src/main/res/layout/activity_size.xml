<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- רקע מלא -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כותרת -->
    <TextView
        android:id="@+id/tvChooseSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="בחר את הכמות:"
        android:textSize="24sp"
        android:textColor="#083D85"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- כפתור 200 גרם -->
    <Button
        android:id="@+id/btn200g"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="200 גרם"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0B3D76"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvChooseSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- כפתור 400 גרם -->
    <Button
        android:id="@+id/btn400g"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="400 גרם"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4681AD"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn200g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- כפתור 600 גרם -->
    <Button
        android:id="@+id/btn600g"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="600 גרם"
        android:textColor="#FFFFFF"
        android:backgroundTint="#64B5F6"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn400g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>