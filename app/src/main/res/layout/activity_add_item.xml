<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">



    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/back4"
        android:scaleType="fitXY"
        android:contentDescription="רקע"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Name -->
        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם המוצר"
            android:textSize="18sp" />

        <!-- Type -->
        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <!-- Calories -->
        <EditText
            android:id="@+id/inputCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="קלוריות"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp" />

        <!-- Protein -->
        <EditText
            android:id="@+id/inputProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="חלבון"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp" />

        <!-- Fat -->
        <EditText
            android:id="@+id/inputFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שומן"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp" />

        <!-- Carbs -->
        <EditText
            android:id="@+id/inputCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="פחמימות"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp" />

        <!-- Add Item -->
        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הוסף מוצר"
            android:textSize="18sp"
            android:backgroundTint="#E0D2A08C"
            android:layout_marginTop="25dp" />

        <!-- Image Preview (BOTTOM) -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="תמונה" />

        <!-- Camera & Gallery Buttons (BOTTOM) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E0D2A08C"
                android:text="מצלמה" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:backgroundTint="#E0D2A08C"
                android:text="גלריה" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>