<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- רקע -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ברוך הבא -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="שלום, משתמש!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#083D85"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כותרת מטרה -->
    <TextView
        android:id="@+id/tvGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר מטרה:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#083D85"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- RadioGroup מסה / חיטוב -->
    <RadioGroup
        android:id="@+id/rgGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rbMuscle"
            android:text="מסה"
            android:textSize="18sp"
            android:textColor="#083D85"/>

        <RadioButton
            android:id="@+id/rbCut"
            android:text="חיטוב"
            android:textSize="18sp"
            android:textColor="#083D85"/>
    </RadioGroup>

    <!-- כותרת כמות -->
    <TextView
        android:id="@+id/tvChooseSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר גודל כוס:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#083D85"
        app:layout_constraintTop_toBottomOf="@id/rgGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- RadioGroup גדלים -->
    <RadioGroup
        android:id="@+id/rgSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvChooseSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rb200"
            android:text="200 גרם"
            android:textSize="18sp"
            android:textColor="#083D85"/>

        <RadioButton
            android:id="@+id/rb400"
            android:text="400 גרם"
            android:textSize="18sp"
            android:textColor="#083D85"/>

        <RadioButton
            android:id="@+id/rb600"
            android:text="600 גרם"
            android:textSize="18sp"
            android:textColor="#083D85"/>
    </RadioGroup>

    <!-- כפתור הבא -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הבא"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>